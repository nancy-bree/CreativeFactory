@model CreativeFactory.Web.Models.ArticleDetailsViewModel

@{
    ViewBag.Title = Model.Title;
}

<div class="page-header center">
  <h1>@Model.Title <small><i>(@Model.Items.Count @Resources.ItemsCount)</i></small></h1>
</div>

<blockquote>
    @Html.DisplayFor(m => m.Description)
</blockquote>

@Html.ActionLink(@Resources.AddItemNav, "Add", "Item", new { articleId = ViewBag.ArticleId }, new { role = "button", @class = "btn btn-primary"})

@if (Model.Items.Count > 0)
{
    Html.RenderPartial("~/Views/Shared/_ItemsList.cshtml", Model.Items);
}
else
{
    <p>@Resources.NoItemsFound</p>
}